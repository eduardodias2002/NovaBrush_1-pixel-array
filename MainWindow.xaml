<Window x:Class="_1_pixel_array.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1_pixel_array"
        mc:Ignorable="d"
        Title="NovaBrush" Height="720" Width="1280" Background="#FF292929" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="toolbar_top" Grid.Row="0" 
                Background="#1E1E1E" 
                Height="50" Panel.ZIndex="1">
            <StackPanel Orientation="Horizontal" 
                        Margin="0,0,0,24">
                <Button x:Name="btn_open" 
                        Content="Open" 
                        Width="48" 
                        Background="#FF202020"
                        Foreground="White"
                        BorderBrush="Transparent" Height="20" Click="btn_open_Click" Panel.ZIndex="1" Margin="4,0,0,0"/>
            </StackPanel>
        </Border>

        <Border x:Name="toolbar_bottom" Grid.Row="1" 
                Background="#1E1E1E" 
                Height="30" Panel.ZIndex="1" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="lbl_MousePos" Text="dummy" Foreground="White" Height="16" Width="95" VerticalAlignment="Bottom" Margin="6,0,0,6"></TextBlock>
            </StackPanel>
        </Border>

        <Canvas Grid.Row="1" 
                x:Name="MainCanvas" 
                Background="#FF444444"
                RenderTransformOrigin="0,0">
        </Canvas>
    </Grid>
</Window>
